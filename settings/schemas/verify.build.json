{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Verify Build Node",
  "required": ["id", "type", "version", "scope", "meta", "data"],
  "properties": {
    "id": { "type": "string", "pattern": "^settings://" },
    "type": { "type": "string", "const": "verify.build" },
    "version": { "type": "string" },
    "scope": { "type": "array", "items": { "type": "string" } },
    "meta": { "$ref": "#/definitions/meta" },
    "data": {
      "type": "object",
      "required": ["result", "checks"],
      "properties": {
        "result": { "type": "string", "enum": ["passed", "failed", "pending"] },
        "checks": { "type": "array", "items": { "type": "string" } },
        "signedBy": { "type": "string" },
        "signature": { "type": "string" },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "checksum": { "type": "string" },
              "target": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "meta": {
      "type": "object",
      "required": ["owner", "createdAt", "checksum"]
    }
  }
}








