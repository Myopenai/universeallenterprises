{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "AutoFix Pattern Node",
  "required": ["id", "type", "version", "scope", "meta", "data"],
  "properties": {
    "id": { "type": "string", "pattern": "^settings://" },
    "type": { "type": "string", "const": "autofix.pattern" },
    "version": { "type": "string" },
    "scope": { "type": "array", "items": { "type": "string" } },
    "meta": { "$ref": "#/definitions/meta" },
    "data": {
      "type": "object",
      "required": ["detect", "propose"],
      "properties": {
        "detect": { "type": "string" },
        "propose": { "type": "string" },
        "llmPrompt": { "type": "string" },
        "policies": { "type": "array", "items": { "type": "string" } }
      }
    }
  },
  "definitions": {
    "meta": {
      "type": "object",
      "required": ["owner", "createdAt", "checksum"]
    }
  }
}








