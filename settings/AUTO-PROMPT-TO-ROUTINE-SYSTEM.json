{
  "system_name": "Auto-Prompt-to-Routine-System",
  "version": "1.0.0",
  "status": "ACTIVE",
  "description": "Automatisches System, das alle User-Prompts als wiederverwendbare Routinen ins System einliest und speichert",
  "branding": "T,.&T,,.&T,,,.(C)TEL1.NL",
  
  "core_functionality": {
    "prompt_analysis": {
      "enabled": true,
      "analysis_depth": "FULL",
      "extract_patterns": true,
      "extract_actions": true,
      "extract_requirements": true,
      "extract_parameters": true
    },
    
    "routine_generation": {
      "enabled": true,
      "auto_create_routine": true,
      "routine_format": "JSON",
      "store_location": "settings/routines/",
      "naming_convention": "ROUTINE-{TIMESTAMP}-{ACTION_TYPE}.json"
    },
    
    "routine_execution": {
      "enabled": true,
      "auto_execute_on_match": false,
      "require_confirmation": true,
      "log_execution": true
    }
  },
  
  "prompt_analysis_rules": {
    "detect_keywords": [
      "erstellen", "bauen", "implementieren", "konfigurieren",
      "erweitern", "hinzufügen", "archivieren", "konsolidieren",
      "fixen", "beheben", "testen", "deployen",
      "analysieren", "prüfen", "verifizieren", "validieren"
    ],
    
    "detect_file_types": [
      ".md", ".html", ".js", ".json", ".sql", ".yaml", ".css"
    ],
    
    "detect_system_components": [
      "TELBANK", "TELADIA", "TOGETHERSYSTEMS", "TPGA",
      "Voucher", "Börse", "Banking", "Verschlüsselung",
      "Localhost", "CEOC", "JJC", "MetaMask"
    ],
    
    "detect_quality_requirements": [
      "pixel-perfekt", "wasserdicht", "zero-defect", "industriell",
      "IBM-Standard", "Hollywood-Qualität", "Studio-Max", "DaVinci"
    ]
  },
  
  "routine_structure": {
    "routine_id": "AUTO-GENERATED-UUID",
    "created_at": "ISO_TIMESTAMP",
    "prompt_source": "FULL_ORIGINAL_PROMPT",
    "extracted_intent": "MAIN_ACTION",
    "parameters": {},
    "actions": [],
    "dependencies": [],
    "expected_outputs": [],
    "quality_criteria": [],
    "execution_history": []
  },
  
  "integration": {
    "settings_manifest": true,
    "industrial_fabrication_routine": true,
    "console_monitoring": true,
    "pre_code_verification": true,
    "mcp_systems": true
  },
  
  "storage": {
    "routines_directory": "settings/routines/",
    "prompts_archive": "settings/routines/prompts-archive/",
    "execution_logs": "settings/routines/execution-logs/",
    "backup_enabled": true,
    "version_control": true
  },
  
  "workflow": {
    "step_1": "Prompt empfangen",
    "step_2": "Prompt analysieren (Keywords, Actions, Parameters)",
    "step_3": "Routine-Struktur generieren",
    "step_4": "In settings/routines/ speichern",
    "step_5": "Settings-Manifest aktualisieren",
    "step_6": "Konsistenz-Prüfung durchführen",
    "step_7": "Ausführung vorbereiten"
  },
  
  "active_routines": [],
  
  "statistics": {
    "total_prompts_analyzed": 0,
    "total_routines_created": 0,
    "total_routines_executed": 0,
    "success_rate": 0
  }
}

