{
  "id": "OSTOSOS-INSTALLER-SYSTEM",
  "version": "1.0.0-STANDARD",
  "status": "PERMANENT-ACTIVE",
  "mandatory": true,
  "hardCoded": true,
  "sealedWith": "TTT-HORIZONTAL-BAR-INFINITY",
  "branding": ".{T,.[ OS.] OS-TOS - OSTOS∞8∞+++a∞:=n→∞lim​an∞ as superscript ≈ ⁺∞(C)(R) | URL: TEL1.NL - WHATSAPP - ( 0031613803782 ). T,.&T,,.&T,,,.].T,,,,.(C)(R).T,,.}.",
  "description": "OSTOSOS Installer System - Standard-Integration mit Settings-Ordner-System. Alle Installer-Prozesse verwenden automatisch die gesamte Logik des Settings-Ordners.",
  "principle": "Jeder Installer-Prozess muss VORAB den Settings-Ordner konsultieren, verifizieren und harmonisieren. Dies ist Standard und kann nicht deaktiviert werden.",
  "workflow": {
    "pre": [
      "loadSettingsManifest",
      "verifySettingsFolderIntegrity",
      "runPreCodeVerification",
      "activateIndustrialFabricationRoutine",
      "activateConsoleMonitoring",
      "verifyChainSystem_T1_T2_T3_Tinf",
      "checkMinimalUserActionPrinciple",
      "verifyIBMStandard",
      "checkHTTPResourceMonitor"
    ],
    "during": [
      "characterByCharacterVerification",
      "enforceSettingsFolderProtection",
      "applyPreCodeVerificationRules",
      "monitorConsoleHeart",
      "validateAgainstSettingsSchemas",
      "enforceChainSystemValidation",
      "applyIndustrialFabricationRoutine",
      "verifyNoCodeExposure"
    ],
    "post": [
      "updateSettingsManifest",
      "runPostInstallationVerification",
      "updateErrorPatternStore",
      "consoleHeartHealthCheck",
      "saveAsSystemBaseSetting"
    ]
  },
  "installerTypes": {
    "parallel": {
      "enabled": true,
      "requiresSettingsVerification": true,
      "settingsPath": "Settings/installer/parallel-installation.json",
      "workflow": "standard"
    },
    "standalone": {
      "enabled": true,
      "requiresSettingsVerification": true,
      "settingsPath": "Settings/installer/standalone-installation.json",
      "workflow": "standard"
    },
    "virtual": {
      "enabled": true,
      "requiresSettingsVerification": true,
      "settingsPath": "Settings/installer/virtual-installation.json",
      "workflow": "standard"
    },
    "container": {
      "enabled": true,
      "requiresSettingsVerification": true,
      "settingsPath": "Settings/installer/container-installation.json",
      "workflow": "standard"
    },
    "boot-image": {
      "enabled": true,
      "requiresSettingsVerification": true,
      "settingsPath": "Settings/installer/boot-image-installation.json",
      "workflow": "standard"
    },
    "pwa": {
      "enabled": true,
      "requiresSettingsVerification": true,
      "settingsPath": "Settings/installer/pwa-installation.json",
      "workflow": "standard"
    }
  },
  "codeProtection": {
    "noCodeExposure": true,
    "encryptionRequired": true,
    "obfuscationRequired": true,
    "compiledLanguageOnly": true,
    "allowedLanguages": ["go", "rust", "c", "cpp", "wasm"],
    "forbiddenLanguages": ["python", "javascript", "typescript"],
    "reason": "Python/JS/TS sind nicht verschlüsselt - Code ist sichtbar. Nur kompilierte Sprachen erlaubt."
  },
  "platforms": {
    "windows": {
      "executable": "OSTOSOS-Setup.exe",
      "requiresSettingsVerification": true,
      "settingsPath": "Settings/installer/platforms/windows.json"
    },
    "macos": {
      "executable": "OSTOSOS-Setup.app",
      "requiresSettingsVerification": true,
      "settingsPath": "Settings/installer/platforms/macos.json"
    },
    "linux": {
      "executable": "OSTOSOS-Setup.bin",
      "requiresSettingsVerification": true,
      "settingsPath": "Settings/installer/platforms/linux.json"
    },
    "all": {
      "executable": "OSTOSOS-Setup-universal",
      "requiresSettingsVerification": true,
      "settingsPath": "Settings/installer/platforms/universal.json"
    }
  },
  "errorHandling": {
    "noUserVisibleErrors": true,
    "silentErrorRecovery": true,
    "automaticFix": true,
    "errorPatternStore": "Settings/error-patterns.json",
    "onError": [
      "extractErrorSignature",
      "storeErrorPatternWithContext",
      "applyAutomaticFix",
      "continueSilently",
      "neverShowErrorToUser"
    ]
  },
  "compatibility": {
    "target": "100%",
    "noVersionProblems": true,
    "automaticCompatibilityCheck": true,
    "settingsPath": "Settings/installer/compatibility.json",
    "checkpoints": [
      "osVersion",
      "architecture",
      "dependencies",
      "permissions",
      "storage"
    ]
  },
  "integration": {
    "settingsManifest": "Settings/settings-manifest.json",
    "preCodeVerification": "Settings/PRE-CODE-VERIFICATION-SYSTEM.json",
    "industrialFabrication": "Settings/INDUSTRIAL-FABRICATION-ROUTINE.json",
    "consoleMonitoring": "Settings/CONSOLE-MONITORING-SYSTEM.json",
    "httpResourceMonitor": "Settings/HTTP-RESOURCE-MONITOR-ROUTINE.json",
    "ibmStandard": "Settings/IBM-STANDARD.json",
    "minimalUserAction": "Settings/MINIMAL-USER-ACTION-PRINCIPLE.json",
    "chainSystem": "Settings/CHAIN-SYSTEM-MATRIX.json"
  },
  "standardProcedure": {
    "description": "Dies ist die Standard-Prozedur für ALLE Installer-Prozesse. Kann nicht deaktiviert werden.",
    "steps": [
      "1. VORAB: Settings-Ordner konsultieren",
      "2. VORAB: Pre-Code-Verification durchführen",
      "3. VORAB: Industrial Fabrication Routine aktivieren",
      "4. VORAB: Console Monitoring aktivieren",
      "5. WÄHREND: Character-by-Character-Verification",
      "6. WÄHREND: Chain-System Validierung",
      "7. WÄHREND: Settings-Ordner-Schutz",
      "8. NACH: Settings-Manifest aktualisieren",
      "9. NACH: Als System-Grund-Einstellung speichern"
    ],
    "mandatory": true,
    "cannotBeDisabled": true
  },
  "systemBaseSetting": {
    "path": "Settings/system-base-settings/ostosos-installer.json",
    "autoSave": true,
    "description": "Wird automatisch als System-Grund-Einstellung gespeichert",
    "versionControl": true
  },
  "guardRules": {
    "settingsFolderProtection": {
      "enabled": true,
      "description": "Settings-Ordner darf nicht modifiziert werden während Installation",
      "mandatory": true
    },
    "codeExposurePrevention": {
      "enabled": true,
      "description": "Kein Code darf preisgegeben werden",
      "mandatory": true
    },
    "errorVisibilityPrevention": {
      "enabled": true,
      "description": "Keine Fehler sollen für User sichtbar sein",
      "mandatory": true
    }
  }
}

