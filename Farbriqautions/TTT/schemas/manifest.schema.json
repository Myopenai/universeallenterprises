{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://togethersystems.io/schemas/manifest.schema.json",
  "title": "TogetherSystems Factory Manifest",
  "description": "Schema for the unified factory.manifest.yaml",
  "type": "object",
  "required": ["project", "environments", "toolchains", "pipelines"],
  "properties": {
    "project": {
      "type": "object",
      "required": ["name", "version", "owner"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Project name"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9]+)?$",
          "description": "Semantic version"
        },
        "codename": {
          "type": "string",
          "description": "Release codename"
        },
        "branding": {
          "type": "string",
          "description": "Branding string"
        },
        "owner": {
          "type": "object",
          "required": ["name", "email"],
          "properties": {
            "name": { "type": "string" },
            "alias": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "phone": { "type": "string" },
            "orcid": { "type": "string" },
            "location": { "type": "string" }
          }
        },
        "copyright": { "type": "string" },
        "license": {
          "type": "string",
          "enum": ["MIT", "Apache-2.0", "GPL-3.0", "BSD-3-Clause", "ISC", "Proprietary"]
        },
        "urls": {
          "type": "object",
          "additionalProperties": { "type": "string", "format": "uri" }
        },
        "repositories": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "url"],
            "properties": {
              "name": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "type": { "type": "string" }
            }
          }
        }
      }
    },
    "environments": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["label", "variables"],
        "properties": {
          "label": { "type": "string" },
          "variables": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          },
          "features": {
            "type": "object",
            "additionalProperties": { "type": "boolean" }
          }
        }
      }
    },
    "toolchains": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["label", "detect", "tools"],
        "properties": {
          "label": { "type": "string" },
          "detect": {
            "type": "object",
            "properties": {
              "files": {
                "type": "array",
                "items": { "type": "string" }
              },
              "patterns": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "tools": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "services": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["label", "type"],
        "properties": {
          "label": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["web", "api", "service", "generator", "unity", "streaming", "media"]
          },
          "source": { "type": "string" },
          "output": { "type": "string" },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" }
          },
          "config": { "type": "object" },
          "features": {
            "type": "array",
            "items": { "type": "string" }
          },
          "endpoints": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "pipelines": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["label", "trigger", "stages"],
        "properties": {
          "label": { "type": "string" },
          "trigger": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "stages": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "label"],
              "properties": {
                "name": { "type": "string" },
                "label": { "type": "string" },
                "depends_on": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "parallel": { "type": "boolean" },
                "jobs": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["name", "command"],
                    "properties": {
                      "name": { "type": "string" },
                      "command": { "type": "string" },
                      "timeout": { "type": "string" },
                      "artifacts": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "path": { "type": "string" },
                            "type": { "type": "string" }
                          }
                        }
                      },
                      "requires": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "secret": { "type": "string" }
                          }
                        }
                      }
                    }
                  }
                },
                "on_failure": {
                  "type": "string",
                  "enum": ["abort", "continue", "rollback"]
                }
              }
            }
          }
        }
      }
    },
    "policies": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["label", "rules"],
        "properties": {
          "label": { "type": "string" },
          "rules": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name"],
              "properties": {
                "name": { "type": "string" },
                "enforce": { "type": "boolean" }
              }
            }
          }
        }
      }
    },
    "deployment": {
      "type": "object",
      "properties": {
        "targets": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["label", "type"],
            "properties": {
              "label": { "type": "string" },
              "type": {
                "type": "string",
                "enum": ["static", "ssh", "workers", "container"]
              },
              "url": { "type": "string", "format": "uri" }
            }
          }
        },
        "cdn": {
          "type": "object",
          "properties": {
            "provider": { "type": "string" },
            "cache_rules": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "pattern": { "type": "string" },
                  "ttl": { "type": "integer" }
                }
              }
            }
          }
        }
      }
    },
    "observability": {
      "type": "object",
      "properties": {
        "health_checks": {
          "type": "object",
          "properties": {
            "interval": { "type": "string" },
            "timeout": { "type": "string" },
            "endpoints": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["url"],
                "properties": {
                  "url": { "type": "string", "format": "uri" },
                  "expected_status": { "type": "integer" }
                }
              }
            }
          }
        },
        "self_healing": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "actions": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["trigger", "action"],
                "properties": {
                  "trigger": { "type": "string" },
                  "action": { "type": "string" },
                  "cooldown": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "secrets": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "description", "source"],
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "source": {
                "type": "string",
                "enum": ["env", "vault", "file"]
              }
            }
          }
        }
      }
    },
    "bootstrap": {
      "type": "object",
      "properties": {
        "entry_point": { "type": "string" },
        "phases": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "label", "actions"],
            "properties": {
              "name": { "type": "string" },
              "label": { "type": "string" },
              "actions": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "logging": {
          "type": "object",
          "properties": {
            "level": {
              "type": "string",
              "enum": ["debug", "info", "warn", "error"]
            },
            "format": {
              "type": "string",
              "enum": ["json", "text"]
            }
          }
        }
      }
    },
    "sbom": {
      "type": "object",
      "properties": {
        "format": {
          "type": "string",
          "enum": ["CycloneDX", "SPDX"]
        },
        "version": { "type": "string" }
      }
    },
    "provenance": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "format": { "type": "string" },
        "level": { "type": "integer" }
      }
    }
  }
}

